{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BASILEIA 52 OG10 Schema",
  "type": "object",
  "required": ["basileia_og10"],
  "properties": {
    "basileia_og10": {
      "type": "object",
      "required": ["version", "studios", "rules"],
      "properties": {
        "version": { "type": "string", "minLength": 1 },
        "generated_at": { "type": "string", "minLength": 8 },
        "rules": {
          "type": "object",
          "required": ["studio_id_range", "count_required", "enums"],
          "properties": {
            "studio_id_range": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": { "type": "string" }
            },
            "count_required": { "type": "integer", "const": 52 },
            "enums": {
              "type": "object",
              "required": ["visibility", "surface", "priority_group"],
              "properties": {
                "visibility": { "type": "array", "items": { "type": "string" } },
                "surface": { "type": "array", "items": { "type": "string" } },
                "priority_group": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        },
        "studios": {
          "type": "array",
          "minItems": 52,
          "maxItems": 52,
          "items": {
            "type": "object",
            "required": ["studio_id", "name", "visibility", "surface", "priority_group", "description"],
            "properties": {
              "studio_id": { "type": "string", "pattern": "^S(0[0-9]|[1-4][0-9]|5[0-1])$" },
              "name": { "type": "string", "minLength": 2 },
              "visibility": { "type": "string", "enum": ["VISIBLE", "INVISIBLE", "CORE"] },
              "surface": { "type": "string", "enum": ["MENU", "PALETTE_SLASH_MOUSE_VOICE", "CAPO_ABERTO"] },
              "priority_group": { "type": "string", "enum": ["A1", "A2", "B", "C"] },
              "description": { "type": "string", "minLength": 5 }
            }
          }
        }
      }
    }
  }
}
